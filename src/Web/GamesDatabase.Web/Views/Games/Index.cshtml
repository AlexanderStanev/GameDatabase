                                <h5 class="card-title">@game.Title</h5>
                                <div class="d-flex justify-content-between align-items-center">
                                    @*Genres*@
                                    <small class="text-muted">RPG, Action</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

