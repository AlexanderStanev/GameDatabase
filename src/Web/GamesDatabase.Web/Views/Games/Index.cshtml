@model IEnumerable<GamesDatabase.Web.Models.ViewModels.Games.DetailedGameViewModel>


@{
    ViewData["Title"] = "Index";
}

<h1 class="py-2">Games</h1>
<div class="py-1 bg-light">
    <div class="container">
        <h4 class="card-title text-center">Recently Released</h4>
        <div class="row py-3">
            @{
                foreach (var game in Model)
                {
                    <div class="col-md-2">
                        <div class="card mb-4 shadow-sm">
                            @*Image*@
                            <img class="card-img" src="https://static.raru.co.za/cover/2014/06/29/1784728-l.jpg?v=1404044687" alt="text" style="height: 175px; width: 100%; display: block;">
                            <div class="card-body">
                                <h5 class="card-title">@game.Title</h5>
                                <div class="d-flex justify-content-between align-items-center">
                                    @*Genres*@
                                    <small class="text-muted">RPG, Action</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

        <h4 class="card-title text-center">Random</h4>
        <div class="row">
